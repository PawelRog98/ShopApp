@model Shop.Models.Product

@{
    ViewData["Title"] = "Details";
}
    <div class="col-md-12 container-background">
        <h1>Details</h1>

        <div>
            <h4>Product</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    <img src="~/img/images/@Html.DisplayFor(model => model.ImagePath)" class="img-fluid rounded-lg" height="80" width="120" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Company)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Company.CompanyName)
                </dd>
            </dl>
        </div>
        <div>
            @if (User.IsInRole("Admin")) 
            {
                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-pen"></i> Edit</a>
            }
            <a class="btn btn-secondary" asp-action="Index"> <i class="fas fa-hand-point-left"></i> Back to List</a>
            <br />
            <br />
        </div>
    </div>
<div class="lds-ripple-wrapper">
    <div class="lds-ripple"><div></div><div></div></div>
</div>