@model Shop.Models.Product

@{
    ViewData["Title"] = "Edit";
}

    <div class="col-md-12 container-background text-md-center">
        <h1>Edit</h1>

        <h4>Product</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImagePath" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <span asp-validation-for="ImagePath" class="text-danger"></span> <br />
                        <img ID="impPrev" class="img-fluid rounded" src="~/img/images/@Model.ImagePath" />
                    </div>
                    <div class="form-group">
                        <input name="Editfile" type="file" onchange="ShowPreview(this)" class="btn btn-primary" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductType" class="control-label"></label>
                        <select asp-for="ProductType" asp-items="@Html.GetEnumSelectList<ProductType>()" class="form-control"></select>
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-hand-point-left"></i> Back to List</a>
        </div>
        <div class="lds-ripple-wrapper">
            <div class="lds-ripple"><div></div><div></div></div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
