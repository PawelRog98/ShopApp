@model IEnumerable<Shop.Models.Orders>

@{
    ViewData["Title"] = "Orders";
}
    <button onclick="topFunction()" id="scroll-up-button" title="Up"><i class='fas fa-arrow-up'></i></button>
    <div class="container text-center">
        <h1><i class="fas fa-history"></i> Orders</h1>
        <br />
        <br />
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderName)
            </th>
            <th>
                Date
            </th>
            <th>
                Order costs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateTime)
            </td>
            <td>
                <i class="fas fa-dollar-sign"></i> @Html.DisplayFor(modelItem => item.TransportCost)
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id" asp-route-UserName="@item.UserName" asp-route-OrderName="@item.OrderName">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="lds-ripple-wrapper">
    <div class="lds-ripple"><div></div><div></div></div>
</div>
